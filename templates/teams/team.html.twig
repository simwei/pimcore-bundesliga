{% extends 'layout.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block content %}
	<div class="p-5 text-center bg-body-tertiary">

		<h1 class="text-center">{{team.name}}</h1>

		<hr/>

		<h2>Facts</h2>

		<div class="container text-center">
			<div class="row gx-5">
				<div class="col">
					<div class="p-3 shadow-5 d-flex justify-content-center align-items-center h-100">
						Founded in:
						<br/>
						{{ team.foundingYear }}
					</div>
				</div>
				<div class="col">
					<div class="p-3 shadow-5 d-flex justify-content-center align-items-center h-100">
						Trainer:
						<br/>
						{{ team.trainer }}
					</div>
				</div>
				<div class="col">
					<div class="p-3 shadow-5 d-flex justify-content-center align-items-center h-100">
						<div>
							City:
							<br/>
							<a href={{ "https://www.google.com/maps?z=12&ll=" ~ team.coordinates.latitude ~ "," ~ team.coordinates.longitude}}>
								{{ team.city }}
							</a>

						</div>
					</div>
				</div>

				<div class="col">
					<div class="p-3 shadow-5 d-flex justify-content-center align-items-center h-100">
						<img src={{team.logo.getThumbnail("BigLogo")}}/>
					</div>
				</div>

			</div>
		</div>

		<hr/>

		<h2>Players</h2>

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Number</th>
					<th scope="col">Name</th>
					<th scope="col">Age</th>
					<th scope="col">Position</th>
				</tr>
			</thead>
			<tbody>
				{% for player in players %}
					<tr>
						<th scope="row">
							{{player.number}}
						</th>
						<td>
							{{player.name}}
						</td>
						<td>
							{{player.age}}
						</td>
						<td>
							{{player.position}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
